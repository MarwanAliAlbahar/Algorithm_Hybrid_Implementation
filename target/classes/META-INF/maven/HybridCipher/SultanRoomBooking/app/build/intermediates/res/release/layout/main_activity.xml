<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_navigation_bar" />

    <ImageView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/banner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/row_item_for_listview" />
    </ScrollView>

</LinearLayout><!-- From: file:/Users/marwanalbahar/Desktop/HybridCipher/target/classes/META-INF/maven/HybridCipher/SultanRoomBooking/app/src/main/res/layout/main_activity.xml -->