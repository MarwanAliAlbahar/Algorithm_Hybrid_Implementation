<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout1"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@color/blue_color"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="right"
            android:padding="5dp"
            android:text="Sign Out"
            android:textColor="@color/red_orange"
            android:textSize="12sp" />
        
         <TextView
            android:id="@+id/tv_customer_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toLeftOf="@id/user_signout"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="right"
            android:padding="5dp"
            android:text="Reach Us"
             android:textColor="@color/red_orange"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_customer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_customer_contact"
           android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:text="About Us"
            android:textColor="@color/red_orange"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_customer_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_customer_price"
           android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:text="Our Services"
            android:textColor="@color/red_orange"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_customer_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_customer_services"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:text="Home"
             android:textColor="@color/red_orange"
            android:textSize="12sp" />
       
    </RelativeLayout>